@model System.Collections.Generic.List<string>
@{
    ViewData["Title"] = "Search by Breed";
}
<h1 class="text text-primary">@ViewData["Title"]</h1>

<form action="Breed">
    <audio id="myAudio">
        <source src="wwwroot\\static\\bark.mp3" type="audio/mpeg">
    </audio>
    <div class="mb-3 col-4">
        <label for="breed" class="form-label">Enter a breed.</label>

        <select for="breed" class="form-select" id="blist" name="breed">
            <option disabled selected>--Select breed--</option>
            @foreach (var item in (List<string>)ViewData["Breeds"])
            {
                <option>@item.Trim('"')</option>
            }
        </select>

    </div>
    <input type="submit" class="btn btn-outline-primary" asp-action="Breed" id="myBtn"></input>
</form>

<div class="text-center">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 d-flex align-items-stretch mt-3">
            <div class="col">
                <div class="card h-100" style="border:solid 1px #42f5d4">
                    <img src="@item" class="card-img-top rounded"
                    style="width:100%; align-self:center;border:solid 1px #42f5d4" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text text-primary mx-2">@item.Split('/')[4]</h5>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
@{
    <script>
        $(document).ready(function () {
            $("#blist").change(function () {
                var breed = $("#blist option:selected").text();
                $('#breed').text(breed);
            })
        })
    </script>
}
}
